{
  "name": "textlint-rule-allowed-uris",
  "version": "2.0.0",
  "type": "module",
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "."
  ],
  "description": "A textlint rule for checking allowed URIs in links and images of Markdown.ðŸ”¥",
  "main": "src/textlint-rule-allowed-uris.js",
  "exports": {
    ".": {
      "types": "./build/textlint-rule-allowed-uris.d.ts",
      "default": "./src/textlint-rule-allowed-uris.js"
    }
  },
  "types": "build/textlint-rule-allowed-uris.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./build/*"
      ],
      ".": [
        "./build/textlint-rule-allowed-uris.d.ts"
      ]
    }
  },
  "files": [
    "build/textlint-rule-allowed-uris.d.ts",
    "src/textlint-rule-allowed-uris.js",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "textlintrule",
    "textlint",
    "lint",
    "rule",
    "uri",
    "url",
    "checker"
  ],
  "author": "ë£¨ë°€LuMir <rpfos@naver.com> (https://github.com/lumirlumir)",
  "license": "MIT",
  "homepage": "https://github.com/lumirlumir/npm-textlint-rule-allowed-uris",
  "repository": {
    "type": "github",
    "url": "git+https://github.com/lumirlumir/npm-textlint-rule-allowed-uris.git"
  },
  "bugs": {
    "url": "https://github.com/lumirlumir/npm-textlint-rule-allowed-uris/issues"
  },
  "publishConfig": {
    "provenance": true
  },
  "scripts": {
    "prepare": "husky",
    "publish-package": "node -e \"require('child_process').execSync('npm publish ' + (require('./package.json').version.includes('-') ? '--tag next' : ''), { stdio: 'inherit' })\"",
    "prepublishOnly": "npm run build",
    "build": "npx tsc",
    "test": "node --test && concurrently \"npm:textlint-*\"",
    "coverage": "npx c8 --reporter=lcov npm run test",
    "fix": "concurrently \"npm:fix:*\"",
    "fix:eslint": "npx eslint --fix",
    "fix:prettier": "npx prettier . --write --ignore-unknown",
    "fix:markdownlint": "npx markdownlint **/*.md --fix",
    "lint": "concurrently \"npm:lint:*\"",
    "lint:eslint": "npx eslint",
    "lint:prettier": "npx prettier . --check --ignore-unknown",
    "lint:editorconfig": "npx editorconfig-checker -config .editorconfig-checker.json",
    "lint:markdownlint": "npx markdownlint **/*.md",
    "lint:textlint": "npx textlint -f pretty-error **/*.md",
    "textlint-pretty": "npx textlint src/textlint-rule-allowed-uris.md --rule allowed-uris ./src -f pretty-error",
    "textlint-stylish": "npx textlint src/textlint-rule-allowed-uris.md --rule allowed-uris ./src -f stylish",
    "textlint-json": "npx textlint src/textlint-rule-allowed-uris.md --rule allowed-uris ./src -f json"
  },
  "peerDependencies": {
    "textlint": "^14.0.0 || ^15.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.12",
    "c8": "^10.1.3",
    "concurrently": "^9.2.0",
    "editorconfig-checker": "^6.1.0",
    "eslint": "^9.31.0",
    "eslint-config-bananass": "^0.3.0",
    "eslint-plugin-mark": "^0.1.0-canary.4",
    "husky": "^9.1.4",
    "lint-staged": "^16.1.2",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "prettier-config-bananass": "^0.3.0",
    "textlint": "^14.7.2",
    "textlint-tester": "^14.7.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "cheerio": "^1.1.2"
  }
}
